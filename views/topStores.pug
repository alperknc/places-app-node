extends layout 

block content 
    .inner 
        h2 En iyi #{stores.length} Mekan
        table.table 
            thead 
                td Fotoğraf 
                td Sıra
                td Mekan İsmi
                td Değerlendirme
                td Ortalama
            each store, i in stores 
                tr 
                    td
                        a(href=`/store/${store.slug}`)
                            img(width=200 src=`/uploads/${store.photo || 'store.png'}` alt=store.name)
                    td #{i + 1}
                    td: a(href=`/store/${store.slug}`)= store.name
                    td= store.reviews.length 
                    td #{store.averageRating} / 5